mixin insertLinkMenuItem(title, url)
	li.nav-item.mx-0.mx-lg-1
		a.nav-link.link-item.rounded.js-scroll-trigger(href=`${url}`)= title

mixin insertPortfolioItem(size, title, text)
	li.col-xs-6.col-md-3.work-tiles-items
		.portfolioInner
		a(href='#')
			img.img-responsive(alt='Image Alt 12' src=`//placehold.it/${size}`)
		.textOverlay
			span= title
			span= text

mixin addIcon(name, size=1)
	i(class=`fas ${name} fa-${size}x`)

mixin addBrand(name, size=1)
	i(class=`fab ${name} fa-${size}x`)

mixin insertHeader(data)
	header.master-head.text-center(style=`background-image: ${data.linear} , url(${data.img})`)
		.header-content.container.d-flex.align-items-center.flex-column
			h4.sub-title= data.preWelcomeText
			h1.main-title= data.mainTitleText
			a.btn.btn-primary.btn-x1.text-uppercase.js-scroll-trigger(href="#projects") Explore!
			
mixin insertSectionFullWidth(data)
	section#news.section-page
		.section-header
			.container
				.row.mb-4
					.col-lg-12.text-center
						// +addBrand("fa-unity",3)
						+addIcon("fa-vr-cardboard",3)
						h2.title News / Latest
		.section-body
			each val in data
				.news-items
					a.news-item(data-bs-toggle="modal", href='#portfolioModal1')
						.news-item__header
							img.news-item__header--image(src=`${val.img}`)
						.news-item__caption
							h3.news-item__caption--title= val.title
							p.news-item__caption--text= val.text