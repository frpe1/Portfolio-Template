// ---- Extra 
.no-gutters
  margin-right 0
  margin-left 0
  
.bg-image-full
  background no-repeat center center scroll
  -webkit-background-size cover
  -moz-background-size cover
  background-size cover
  -o-background-size cover

.full-cover-bg-img
  min-height 22rem
  -webkit-background-size cover
  -moz-background-size cover
  background-size cover
  -o-background-size cover

.image-full-width
  max-width 100%
  height auto

.image-full-cover
  max-width 100%
  object-fit cover
  min-width 100%

.image-skew
  position relative
  display block
  &:focus, :hover
    color inherit
    text-decoration none
    outline 0  
  .img
    position relative
    display block
    overflow hidden
    background #160962
    -webkit-transform skew(-7deg)
    -ms-transform skew(-7deg)
    transform skew(-7deg)
    -webkit-transform-origin 50% 50%
    -ms-transform-origin 50% 50%
    transform-origin 50% 50%
    -webkit-backface-visibility hidden
    img
      width 100%
      transform skew(7deg) scale(1.098)
      transition .3s opacity ease
      opacity 1
  .over-info
    position absolute
    top 0
    left 0
    right 0
    width 90%
    height 100%
    margin-left 5%
    text-align center

.bg-color-after-content
  position relative
  &:after
    content ''
    position absolute
    background-color rgba(0,0,0,.7)
    top 0
    bottom 0
    left 0
    right 0

